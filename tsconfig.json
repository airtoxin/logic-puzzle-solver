{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2019", "es2020"],
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"]
}
